<%- include("header.ejs") %>

<style>
  #followingNavbar {
    display: block;
    position: fixed;
    top: 0;
  }

  #topNavbar {
    display: none;
  }
</style>

    <style>

        .emojis {
            font-size: 3rem;
            cursor: pointer;
            margin-right: 20px;
        }

        #on:hover,
        #on1:hover {
            color: crimson;
        }

        #tw:hover,
        #tw1:hover {
            color: yellow;
        }

        #th:hover,
        #th1:hover {
            color: yellowgreen;
        }

        #fo:hover,
        #fo1:hover {
            color: green;
        }

        #myContainer {
            border: 2px dotted black;
            margin-left: auto;
            margin-right: auto;
            width: 54%;
            padding: 20px 7%;
            background-color: whitesmoke;
        }

        @media screen and (max-width: 700px) {
            #myContainer {
                width: 90%;
            }
        }

        #myContainer form {
            width: 420px;
            max-width: 90%;
        }

        #myContainer p {
            font-size: 1.8rem;
        }

        #myContainer form a {
            margin-right: 10px;
            margin-top: 10px;
        }

        .numbers {
            color: white;
        }

        #myContainer textarea {
            /* min-width: 300px; */
            max-width: 450px;
            width: 90%;
            height: 150px;
        }
    </style>

    <div id="myContainer" style="margin: 150px auto;">

        <h2>Feedback</h2>
        <form action="/feedback" method="POST">

            <input type="text" name="name" placeholder="Your Name" required>
            <input type="email" name="email" placeholder="Your Email" required>
            <textarea name="review" id="review" cols="40" rows="40"
                placeholder="Any Suggestions? Write here." style="min-height: 150px;resize: vertical;width: 100%;"></textarea>
            <input type="number" name="overall" id="overall" value="4" style="display: none;">
            <p aria-required="true">How was your overall experience?</p>
            <i class="material-icons emojis" id="on">sentiment_very_dissatisfied</i>
            <i class="material-icons emojis" id="tw">sentiment_neutral</i>
            <i class="material-icons emojis" id="th">sentiment_satisfied</i>
            <i class="material-icons emojis" id="fo">sentiment_very_satisfied</i>

            <p aria-required="true">How was our content quality?</p>
            <input type="number" name="quality" id="quality" value="4" style="display: none;">
            <i class="material-icons emojis" id="on1">sentiment_very_dissatisfied</i>
            <i class="material-icons emojis" id="tw1">sentiment_neutral</i>
            <i class="material-icons emojis" id="th1">sentiment_satisfied</i>
            <i class="material-icons emojis" id="fo1">sentiment_very_satisfied</i>

            <p>How likely you are to recommend our website to others?</p>
            <input type="number" name="recommend" id="recommend" value="5" style="display: none;">
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">1</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">2</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">3</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">4</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">5</a>

            <p>How much visually appealing do you find our site?</p>
            <input type="number" name="appealing" id="appealing" value="5" style="display: none;">
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">1</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">2</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">3</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">4</a>
            <a class="btn-floating btn-large waves-effect waves-light numbers" style="color: white;">5</a>

            <!-- <a type="submit" class="waves-effect btn-large waves-light btn">Submit<i class="fa fa-share-square-o" style="margin-left: 15px;"></i></a>      -->
            <button class="btn waves-effect btn-medium waves-light" name="action"
                style="margin: 75px 0px;background-color: #4b5d67;">Submit
                <i class="material-icons right">send</i>
            </button>
        </form>

    </div>

    

   

